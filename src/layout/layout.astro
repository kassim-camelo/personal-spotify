---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';


interface Props {
    title: string;
}

const {title} = Astro.props;
---

<html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <title>{title}</title>
    </head>
    <body>
        <Header />
        <slot />
        <Footer />
    </body>
</html>

<style is:global>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }
    h1 {
        color: #333;
        text-align: center;
    }
</style>